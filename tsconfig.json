{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strict": true,

    "target": "esnext",
    "module": "NodeNext",
    "declaration": true,
    "declarationDir": "dist/types",
    "rootDir": "./src",

    "jsx": "react",
    "lib": ["esnext", "dom"],

    "noEmit": true,
    "emitDeclarationOnly": true,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "dist", "build", "out"]
}
